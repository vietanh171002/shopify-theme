<style>
    .video-intro{
        background-image: url("{{section.settings.background_image |  image_url: width: 1380 }}" );
        height: 555px; 
        display: flex; 
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-size: cover;
    }

    .video-intro * {
        color: white;   
    }

    .video-intro .heading {
        font-family: 'Playfair Display', serif;
        font-size: 72px;
        margin: 0 0 36px 0; 
    }

    .video-intro .icon-container{
        background-color: transparent;
        outline: none;
        box-shadow: none;
        border: 0;
    }

    .video-intro .fa-play-circle{
        cursor: pointer;
        font-size:100px;
    }

    .video-player-of-video-intro{
        display: none;
        position: fixed;
        top:  0;
        left: 0;
        width: 100%;
        height: 100%;
        align-items: center;
        justify-content: center;
        background-color: rgba(0, 0, 0 , 0.7); 
        z-index: 5;
    }
    .video-player-of-video-intro .modal {
        height: 80%;
    }

        /* Close button styles */
    .video-player-of-video-intro .close {
        position: fixed;
        top: 0; 
        right: 20px;
        font-size: 40px;
        cursor: pointer;
        color:white;
    }
    
    .video-player-of-video-intro .modal iframe{
        width: 100%;
        height: 100%;
    }

    @media (max-width: 1024px){
        .video-intro .heading{
            font-size: 50px;
        }

        .video-intro .fa-play-circle{
            font-size:80px;
        }
    }

    @media (max-width: 768px){
        .video-intro{
            height: 300px;
        }

        .video-intro .heading{
            font-size: 30px;
        }

        .video-intro .fa-play-circle{
            font-size:60px;
        }
    }

    
</style>

<script>
    // Function to open the modal
    function openModal() {
        document.getElementById('videoModal').style.display = 'flex';
        console.log('click'); 
    }

    // Function to close the modal
    function closeModal() {
        document.getElementById('videoModal').style.display = 'none';
    }

</script>

<div class="video-intro">
    <h2 class="heading">{{section.settings.heading}}</h2>
    <div class="icon" ><i class="fa fa-play-circle" onclick="openModal()"></i></div>
    
</div>

<div class="video-player-of-video-intro" id="videoModal">
    <!-- Modal content -->
    <span class="close" onclick="closeModal()">&times;</span>
    <div class="modal">
        
        <!-- Replace "YOUR_VIDEO_URL" with the actual video URL -->
        {% comment %} <iframe width="100%" height="100%" src="{{section.settings.video |  asset_url}}" frameborder="0"
         allowfullscreen ></iframe> {% endcomment %}
         <video width="100%" height="100%" controls class="video-tag-for-intro-video">
            <source src="{{section.settings.video.sources.url}}" type="video/mp4">
        </video>
        <div>{{section.settings.video.sources.url}}</div>
    </div>
   
</div>

{% schema %}
{
    "name": "Intro video",
    "settings": [
        {
            "type": "image_picker",
            "id": "background_image",
            "label": "Background image"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "COLOUR CANYON"
        },
        {
            "type": "video",
            "id": "video", 
            "label": "Video"
        }
    ],
    
    "presets": [
        {
            "name": "Intro video"
        }
    ]
}
{% endschema %}