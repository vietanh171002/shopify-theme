<style>
    .icon-tooltip-set-wrapper{
        background-color: transparent;
        width: 100%;
        height:100%;
        position: relative;
        cursor: pointer;
        display: inline-block;
        overflow:visible;
    }

    .icon-tooltip-set-wrapper:hover .icon-tooltip-set{
        pointer-events:all;
    }

    .icon-tooltip-set{
        width: 60px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        pointer-events: none;
        position: absolute;
        left: 100%;
        bottom: 25px;
    }

    .icon-tooltip-set .icon-1, .icon-2, .icon-3{
        opacity: 0;
        transition-duration: 0.5s;
    }


    .icon-tooltip-set-wrapper:hover .icon-1,
    .icon-tooltip-set-wrapper:hover .icon-2,
    .icon-tooltip-set-wrapper:hover .icon-3
    {
        transform: translateX(-150%);
        opacity: 1;
        transition-duration: 0.5s;
    }

    .icon-tooltip-set .icon-1{
        transition-delay: 50ms;
    }
    .icon-tooltip-set .icon-2{
        transition-delay: .2s;
    }
    .icon-tooltip-set .icon-3{
        transition-delay: .3s;
    }

    .icon-tooltip-set .material-symbols-outlined{
        font-size: 22px;
    }

    .icon-tooltip-set .icon-wrapper{
        background-color: white;
        height: 44px;
        width: 44px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 5px;
        position: relative;
        transition-duration: 0.3s;

    }

    .icon-tooltip-set .icon-wrapper:hover{
        background-color: rgb(163, 139, 94);
        color: white;
        transition-duration: 0.3s;
    }

    .icon-tooltip-set .tooltip{
        position: absolute;
        bottom: 115%;
        background-color: rgb(74, 65, 65);
        color: white;
        font-size: 12px;
        font-family: 'Montserrat', sans-serif;
        white-space: nowrap;
        border-radius: 4px;
        transition-duration: 0.3s;
        opacity: 0;
        pointer-events: none;
        z-index: 5;
        width: 110px;
        height: 33px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .icon-tooltip-set .tooltip::before{
        content: "";
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%);
        border: 5px solid;
        border-color: rgb(74, 65, 65) transparent transparent transparent;
    }

    .icon-tooltip-set .icon-wrapper:hover .tooltip{
        opacity: 1;
        transition-duration: 0.3s;
    }


</style>

<div class="icon-tooltip-set-wrapper">
    <div class="icon-tooltip-set">
        {% if true %}
            <div class="icon-1">
            <div class="icon-wrapper ">
                <span class="tooltip">
                    Quick view
                </span>
                <span class="material-symbols-outlined">
                visibility
                </span>
            </div>
        </div>
        {% endif %}
        {% if  true %}
            <div class="icon-2">
            <div class="icon-wrapper">
                <span class="tooltip">
                    Add to cart
                </span>
                <span class="material-symbols-outlined">
                shopping_cart
                </span>
            </div>
        </div>
        {% endif %}
        
        {% if true %}
            <div class="icon-3">
            <div class="icon-wrapper">
                <span class="tooltip">
                    Add to wishlist
                </span>
                <span class="material-symbols-outlined" onclick="redirectToUrl('youtube.com')">
                favorite
                </span>
            </div>
        </div>
        {% endif %}
        
    </div>
</div>
