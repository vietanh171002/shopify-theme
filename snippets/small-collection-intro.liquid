<style>
    .collection-intro{
        height: 100%; 
        position: relative;
        overflow: hidden;
    }

    .collection-intro > img {
        width: 100%; 
        height: 100%;
        position: absolute;
        transform: scale(1.1);
        transition-duration: 0.5s; 
        z-index: -1;
    }

    .collection-intro:hover > img {
        transform: scale(1);
        transition-duration: 0.5s; 
        filter: brightness(0.5);

    }

    .collection-intro .collection-intro-content{
        position: absolute;
        bottom: 0;
        padding-left: 5%;
        padding-bottom: 5%;
    }

    .collection-intro .collection-name,   .collection-hashtag {
        color: white;
    }

    .collection-intro .collection-name{
    font-size: 75px;
    font-weight: 700;
    line-height: 1.1;
    margin-top: 5px;
    letter-spacing: 5px;
    margin-bottom: 10px;
    }

    
    /* responsive for collection name */
    @media only screen and (max-width: 1198px){
        .collection-intro .collection-name{
            font-size: 46px;    
        }
    }
    @media only screen and (max-width: 1024px){
        .collection-intro .collection-name{
            font-size: 24px;    
        }
    }
    
</style>

<div class="collection-intro" >
    <img src="{{ background_image_url | img_url: 'master'}}" alt="">
    <div class="collection-intro-content">
        <div class="collection-hashtag">
           {{collection_hashtag}}
        </div>
        <div class="collection-name">
            {{collection_name}}
        </div>
        {% render 'shop-now-button' with
            button_name: {{button_name}},
            button_url: {{button_url}}
        %}
    </div>
</div>