<style>
    .review-card{
        background-color: rgb(249, 249, 249);
        padding: 60px 390px;
        display: flex; 
        flex-direction: column;
        justify-content: center;
        align-items: center;
        user-select: none;
        width: 100%;
        flex-shrink: 0;
    }

    .review-card .avatar img{
        height: 65px;
        width: 65px;
        border-radius: 50%;
        margin-bottom: 10px;
        object-fit: cover;
    }

    .review-card .name, .role{
        font-size: 14px;
        font-family: Montserrat,Helvetica Neue,Arial,sans-serif;
    }

    .review-card .review{
        font-family: 'Playfair Display', serif;
        font-size: 18px;
        text-align: center;
        font-weight: 100;
    }

    .review-card .break-line{
        background-color: #828282;
        width: 35px;
        height: 2px;
        margin: 25px 0;
    }

    @media (max-width: 1200px){
        .review-card{
            padding: 60px 170px; 
        }
    }

    @media (max-width: 768px){
        .review-card{
            padding: 60px 10px;
        }
    }
</style>

<div class="review-card">
    <div class="avatar">
        <img src="{{avatar_url |  image_url: width: 1380 }}" alt="">
    </div>
    <div class="review">
        "{{review}}"
    </div>
    <span class="break-line"></span>
    <div class="name">
        {{reviewer}}
    </div>
    <div class="role">
        {{role}}
    </div>
</div> 
